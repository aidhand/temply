{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": false
  },

  "formatter": {
    "enabled": true,
    "formatWithErrors": true,

    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80,

    "attributePosition": "multiline",
    "lineEnding": "lf"
  },

  "linter": {
    "enabled": true
  },

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "preserve",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  }
}
